<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:circleimageview="http://schemas.android.com/apk/res-auto"
        android:id="@+id/head_recentcircle"
        android:layout_width="50sp"
        android:layout_height="50sp"
        android:src="@drawable/my_head_icon"
        circleimageview:civ_fill_color="@android:color/holo_blue_light"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"/>
    <TextView
        android:id="@+id/name_recentcircle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorBlue"
        android:layout_toRightOf="@id/head_recentcircle"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="10dp"/>
    <TextView
        android:id="@+id/content_recentcircle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black3"
        android:layout_below="@id/head_recentcircle"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="25dp"
        android:ellipsize="end"
        android:maxEms="20"/>
    <GridView
        android:id="@+id/gv"
        android:layout_width="match_parent"
        android:layout_below="@id/content_recentcircle"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:horizontalSpacing="2dp"
        android:numColumns="3"
        android:verticalSpacing="8dp" />
