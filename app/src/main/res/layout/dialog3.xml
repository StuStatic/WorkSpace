<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog2"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="联系人信息"
            android:textColor="#000000"
            android:textSize="23sp"
            android:padding="10sp"
            />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:background="#d6d6d6"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/dialog_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="15sp"
            android:paddingLeft="45sp"
            android:paddingRight="5sp"
            android:paddingTop="15sp"
            android:text="姓名"
            android:textColor="#333333"
            android:textSize="18sp"
            />

        <EditText
            android:id="@+id/dialog_et_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/dialog_tv_name"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/dialog_tv_name"
            android:layout_toRightOf="@+id/dialog_tv_name"
            />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:background="#d6d6d6"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/dialog_tv_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="15sp"
            android:paddingLeft="45sp"
            android:paddingRight="5sp"
            android:paddingTop="15sp"
            android:text="电话"
            android:textColor="#333333"
            android:textSize="18sp"
            />

        <EditText
            android:id="@+id/dialog_et_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/dialog_tv_phone"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/dialog_tv_phone"
            android:layout_toRightOf="@+id/dialog_tv_phone"
            />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:background="#d6d6d6"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/dialog_tv_mailbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="15sp"
            android:paddingLeft="45sp"
            android:paddingRight="5sp"
            android:paddingTop="15sp"
            android:text="邮箱"
            android:textColor="#333333"
            android:textSize="18sp"
            />

        <EditText
            android:id="@+id/dialog_et_mailbox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/dialog_tv_mailbox"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/dialog_tv_mailbox"
            android:layout_toRightOf="@+id/dialog_tv_mailbox"
            />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:background="#d6d6d6"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
    <Button
        android:id="@+id/dialog_bt_no"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#FFFFFF"
        android:text="取消"
        android:textColor="#888888"
        android:textSize="18sp"
        />
        <View
            android:layout_width="1sp"
            android:layout_height="49sp"
            android:background="#d6d6d6"
            />
        <Button
            android:id="@+id/dialog_bt_yes"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:text="确定"
            android:textColor="#888888"
            android:textSize="18sp"
            />
    </LinearLayout>

</LinearLayout>
