<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF">

    <TextView
        android:id="@+id/make_fragment_an_appointment_item_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15sp"
        android:layout_marginTop="10sp"
        android:text="访问社区：方圆大厦-优客工场"
        android:textColor="#888888"
        android:scaleX="1.04"
        android:scaleY="1.04"
        />

    <TextView
        android:id="@+id/make_fragment_an_appointment_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/make_fragment_an_appointment_item_address"
        android:layout_below="@+id/make_fragment_an_appointment_item_address"
        android:layout_marginTop="5sp"
        android:text="受访对象：北京物联港科技发展有限公司"
        android:scaleX="1.04"
        android:scaleY="1.04"
        android:textColor="#888888"/>
    <TextView
        android:id="@+id/make_fragment_an_appointment_item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/make_fragment_an_appointment_item_name"
        android:layout_below="@+id/make_fragment_an_appointment_item_name"
        android:layout_marginTop="5sp"
        android:text="预约时间：2017-07-12 15:00"
        android:scaleX="1.04"
        android:scaleY="1.04"
        android:textColor="#888888"
        />
    <TextView
        android:id="@+id/make_fragment_an_appointment_item_reason"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/make_fragment_an_appointment_item_time"
        android:layout_below="@+id/make_fragment_an_appointment_item_time"
        android:layout_marginTop="5sp"
        android:text="来访事由：讨论新项目需求"
        android:scaleX="1.04"
        android:scaleY="1.04"
        android:textColor="#888888"
        android:layout_marginBottom="20sp"
        />
        <Button
            android:id="@+id/make_fragment_an_appointment_item_type"
            android:layout_width="60sp"
            android:layout_height="25sp"
            android:background="@drawable/myactivity_button"
            android:layout_alignBottom="@+id/make_fragment_an_appointment_item_reason"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="15sp"
            android:text="提醒我"
            android:textColor="@color/violet"
            />

</RelativeLayout>
