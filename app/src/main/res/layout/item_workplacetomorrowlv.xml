<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/workplace_img_tomorrow"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="15dp"
        android:src="@mipmap/a4"
        android:scaleType="fitXY"/>
    <TextView
        android:id="@+id/workplace_title_tomorrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:textColor="@color/colorBlack"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/workplace_img_tomorrow"/>
    <TextView
        android:id="@+id/workplace_address_tomorrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10dp"
        android:textColor="@color/black1"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_below="@id/workplace_title_tomorrow"/>
    <TextView
        android:id="@+id/workplace_number_tomorrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10dp"
        android:textColor="@color/black1"

        android:layout_marginLeft="15dp"
        android:layout_below="@id/workplace_address_tomorrow"
        android:layout_marginBottom="5dp"/>
    <TextView
        android:id="@+id/workplace_price_tomorrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        android:layout_alignParentRight="true"
        android:textColor="@color/colorBlack"
        android:layout_marginRight="15dp"
        android:layout_below="@id/workplace_img_tomorrow"
        android:layout_marginTop="10dp"/>
    <ImageView
        android:id="@+id/workplace_order_tomorrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/workplace_price_tomorrow"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:src="@drawable/order"
        android:layout_alignBottom="@id/workplace_number_tomorrow"/>
</RelativeLayout>
