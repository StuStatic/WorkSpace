<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff">

    <TextView
        android:id="@+id/demand_item_tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2017-07-12  15:00"
        android:textColor="@color/black3"
        android:layout_marginTop="20sp"
        android:layout_marginLeft="15sp"
        />
    <TextView
        android:id="@+id/demand_item_tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="阿斯顿发生的发生的发生的发生的发的说法的是发生的发生的发生的发的说法的说法的说法的说法的说法大师傅"
        android:textColor="@color/black2"
        android:layout_below="@id/demand_item_tv_time"
        android:layout_marginLeft="15sp"
        android:layout_marginRight="80sp"
        android:layout_marginTop="10sp"
        android:lineSpacingExtra="1dp"
        android:lineSpacingMultiplier="1.5"
        android:maxLines="3"
        android:ellipsize="end"
        android:layout_marginBottom="15sp"
        />

    <com.ylg.workspace.workspace.view.tag.TagListView
        xmlns:f="http://schemas.android.com/apk/res-auto"
        android:id="@+id/demand_item_tag_interest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/demand_item_tv_content"
        android:layout_marginLeft="5sp"
        android:layout_marginRight="15sp"
        android:layout_marginTop="10sp"
        android:paddingBottom="@dimen/common_margin"
        android:paddingLeft="@dimen/common_margin"
        android:paddingRight="@dimen/common_margin"
        f:horizontalSpacing="@dimen/tag_horizontal_spacing"
        f:orientation="horizontal"
        f:verticalSpacing="@dimen/tag_vertical_spacing"
        android:layout_marginBottom="10sp"
        />











</RelativeLayout>
