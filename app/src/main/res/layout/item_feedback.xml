<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff">

    <TextView
        android:id="@+id/feedback_item_tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2017-07-12  15:00"
        android:textColor="@color/black3"
        android:layout_marginTop="20sp"
        android:layout_marginLeft="15sp"
        />
    <TextView
        android:id="@+id/feedback_item_tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="阿斯顿发生的发生的发生的发生的发的说法的是发生的发生的发生的发的说法的说法的说法的说法的说法大师傅"
        android:textColor="@color/black2"
        android:layout_below="@id/feedback_item_tv_time"
        android:layout_marginLeft="15sp"
        android:layout_marginRight="80sp"
        android:layout_marginTop="10sp"
        android:lineSpacingExtra="1dp"
        android:lineSpacingMultiplier="1.5"
        android:maxLines="3"
        android:ellipsize="end"
        android:layout_marginBottom="15sp"
        />
    <Button
        android:id="@+id/feedback_item_state"
        android:layout_width="60sp"
        android:layout_height="20sp"
        android:background="@drawable/myactivity_button"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="15sp"
        android:text="已读"
        android:textColor="@color/violet"
        android:layout_marginTop="20sp"
        />


</RelativeLayout>
