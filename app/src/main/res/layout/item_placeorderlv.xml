<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite">

    <RelativeLayout
        android:id="@+id/item1_placeorder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/placeorder_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:src="@mipmap/a4" />

        <TextView
            android:id="@+id/placeorder_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/placeorder_img"
            android:layout_marginLeft="15dp"
            android:text="演播厅"
            android:textColor="@color/colorBlack"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/placeorder_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/placeorder_name"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="3dp"
            android:ellipsize="end"
            android:maxEms="14"
            android:singleLine="true"
            android:textColor="@color/black1"
            android:textSize="10dp" />

        <View
            android:id="@+id/placeorder_line02"
            android:layout_width="1dp"
            android:layout_height="10dp"
            android:layout_below="@id/placeorder_name"
            android:layout_marginTop="6dp"
            android:layout_toRightOf="@id/placeorder_address"
            android:background="@color/black1" />

        <TextView
            android:id="@+id/placeorder_floor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/placeorder_name"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="3dp"
            android:layout_toRightOf="@id/placeorder_line02"
            android:text="3层"
            android:textColor="@color/black1"
            android:textSize="10dp" />

        <RelativeLayout
            android:id="@+id/placeorder_content01"
            android:layout_width="30dp"
            android:layout_height="12dp"
            android:layout_below="@id/placeorder_address"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp">

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorGrayLight" />

            <TextView
                android:id="@+id/placeorder_tv01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="讲座"
                android:textColor="@color/black1"
                android:textSize="7dp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/placeorder_content02"
            android:layout_width="30dp"
            android:layout_height="12dp"
            android:layout_below="@id/placeorder_address"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/placeorder_content01">

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorGrayLight" />

            <TextView
                android:id="@+id/placeorder_tv02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="沙龙"
                android:textColor="@color/black1"
                android:textSize="7dp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/placeorder_content03"
            android:layout_width="30dp"
            android:layout_height="12dp"
            android:layout_below="@id/placeorder_address"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/placeorder_content02">

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorGrayLight" />

