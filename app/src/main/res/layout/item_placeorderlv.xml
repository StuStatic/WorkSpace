                android:id="@+id/placeorder_tv03"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="party"
                android:textColor="@color/black1"
                android:textSize="7dp" />
        </RelativeLayout>

