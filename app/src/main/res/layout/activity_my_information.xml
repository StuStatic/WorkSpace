<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f3f3f3"
    tools:context="com.ylg.workspace.workspace.activity.personaldetails.MyInformationActivity">

    <include
        android:id="@+id/information_title"
        layout="@layout/include_title"/>

    <View
        android:id="@+id/information_title_view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/information_title"
        android:background="#d6d6d6"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/information_title_view"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5sp"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/information_headportrait"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15sp"
                    android:text="头像"
                    android:textColor="#666666"
                    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15sp"
                    android:background="@drawable/arrow_right_icon"
                    />

                <ImageView
                    android:layout_width="53sp"
                    android:layout_height="53sp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="35sp"
                    android:background="@drawable/headportrait"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="73sp"
                    android:background="#d6d6d6"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/information_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15sp"
                    android:text="姓名"
                    android:textColor="#666666"
                    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15sp"
                    android:background="@drawable/arrow_right_icon"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="35sp"
                    android:text="龑～龑"
                    android:textColor="#888888"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="53sp"
                    android:background="#d6d6d6"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/information_gender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15sp"
                    android:text="性别"
                    android:textColor="#666666"
                    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15sp"
                    android:background="@drawable/arrow_right_icon"
                    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="35sp"
                    android:background="@drawable/man_icon"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="53sp"
                    android:background="#d6d6d6"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/information_constellation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15sp"
                    android:text="星座"
                    android:textColor="#666666"
                    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15sp"
                    android:background="@drawable/arrow_right_icon"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="35sp"
                    android:text="水瓶座"
                    android:textColor="#888888"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="53sp"
                    android:background="#d6d6d6"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/information_delivery_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15sp"
                    android:text="收货地址"
                    android:textColor="#666666"
                    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15sp"
                    android:background="@drawable/arrow_right_icon"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="53sp"
                    android:background="#d6d6d6"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/information_skill"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
                android:background="#FFFFFF">

                <TextView
                    android:id="@+id/information_tv_skill"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15sp"
                    android:layout_marginTop="10sp"
                    android:text="技能"
                    android:textColor="#666666"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="15sp"
                    android:layout_marginTop="10sp"
                    android:background="@drawable/arrow_right_icon"/>


                <com.ylg.workspace.workspace.view.tag.TagListView
                    xmlns:f="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/information_tag_skill"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/common_margin"
                    android:paddingLeft="@dimen/common_margin"
                    android:paddingRight="@dimen/common_margin"
                    android:layout_below="@id/information_tv_skill"
                    android:layout_marginTop="10sp"
                    android:layout_marginLeft="5sp"
                    android:layout_marginRight="15sp"
                    f:horizontalSpacing="@dimen/tag_horizontal_spacing"
                    f:orientation="horizontal"
                    f:verticalSpacing="@dimen/tag_vertical_spacing"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/information_tag_skill"
                    android:layout_marginTop="18sp"
                    android:background="#d6d6d6"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/information_interest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
                android:background="#FFFFFF">

                <TextView
                    android:id="@+id/information_tv_interest"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15sp"
                    android:layout_marginTop="10sp"
                    android:text="兴趣"
                    android:textColor="#666666"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="15sp"
                    android:layout_marginTop="10sp"
                    android:background="@drawable/arrow_right_icon"/>



                <com.ylg.workspace.workspace.view.tag.TagListView
                    xmlns:f="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/information_tag_interest"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/common_margin"
                    android:paddingLeft="@dimen/common_margin"
                    android:paddingRight="@dimen/common_margin"
                    android:layout_below="@id/information_tv_interest"
                    android:layout_marginTop="10sp"
                    android:layout_marginLeft="5sp"
                    android:layout_marginRight="15sp"
                    f:horizontalSpacing="@dimen/tag_horizontal_spacing"
                    f:orientation="horizontal"
                    f:verticalSpacing="@dimen/tag_vertical_spacing"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/information_tag_interest"
                    android:layout_marginTop="18sp"
                    android:background="#d6d6d6"/>
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/information_delivery_industry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15sp"
                    android:text="行业"
                    android:textColor="#666666"
                    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15sp"
                    android:background="@drawable/arrow_right_icon"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="物联港行业"
                    android:textColor="#888888"
                    android:layout_marginRight="35sp"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="53sp"
                    android:background="#d6d6d6"
                    />



            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/information_delivery_personalizedsignature"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF">

                <TextView
                    android:id="@+id/information_personalizedsignature"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15sp"
                    android:text="个性签名"
                    android:textColor="#666666"
                    />

                <ImageView
                    android:id="@+id/information_iv_personalizedsignature"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15sp"
                    android:background="@drawable/arrow_right_icon"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/information_personalizedsignature"
                    android:layout_marginLeft="10sp"
                    android:maxEms="18"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:text="如果你还无法表达你的想法，这说明你...."
                    android:layout_toLeftOf="@id/information_iv_personalizedsignature"
                    android:textColor="#888888"
                    android:layout_marginRight="10sp"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="53sp"
                    android:background="#d6d6d6"
                    />
            </RelativeLayout>

        </LinearLayout>

    </ScrollView>


</RelativeLayout>
