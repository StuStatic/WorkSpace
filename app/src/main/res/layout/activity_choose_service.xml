<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    tools:context="com.ylg.workspace.workspace.activity.service.ChooseServiceActivity">

    <include layout="@layout/include_title"></include>

    <include layout="@layout/item_line"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <com.ylg.workspace.workspace.activity.service.MyListView
            android:id="@+id/listView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#e4e3de"
            android:choiceMode="singleChoice"
            android:divider="@mipmap/listitem_divide"
            android:listSelector="#00000000"
            android:scrollbars="none"/>

        <com.ylg.workspace.workspace.activity.service.MyListView
            android:id="@+id/subListView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:divider="@mipmap/listitem_divide"
            android:layout_weight="1"
            android:background="#e4e3de">

        </com.ylg.workspace.workspace.activity.service.MyListView>
    </LinearLayout>
</LinearLayout>
